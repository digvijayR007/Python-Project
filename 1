        "             match(t):\n",
        "                 case 'a':\n",
        "                      print(\"What do you want to add\\n\")\n",
        "                      A = int(input(\"1 : Cappuccino - 190$, 2 : Americano - 200$, 3 : Latte - 210$\\n\"))\n",
