        "print(\"Welcome to Diggy's\")\n",
        "print(\"What's your taste?\")\n",
        "M ={1 : \"Cappuccino\" , 2 : \"Americano\" , 3 : \"Latte\"}\n",
        "C ={\"Cappuccino\" : 190 , \"Americano\" : 200 , \"Latte\" : 210}\n",
        "print(\"1 : Cappuccino - 190$, 2 : Americano - 200$, 3 : Latte - 210$\")\n",
        "A=int(input( \"what would you like to have?\\n\"))\n",
        "o=M.get(A)\n",
        "c=0\n",
        "Q = int(input(\"How much?\\n\"))\n",
        "c=c+C.get(o)*Q\n",
        "lst=[o]\n",
        "a=1\n",
        "while(a==1):\n",
        "    print(\"Anything else? 1 : Yes , 2 : No\\n\")\n",
        "    a=int(input())\n",
        "    if (a==1):\n",
        "       A=int(input( \"All ears, what next?\\n\"))\n",
        "       o=M.get(A)\n",
        "       Q = int(input(\"How much?\\n\"))\n",
        "       c=c+C.get(o)*Q\n",
        "       lst.append(o)\n",
        "    elif(a==2):\n",
        "        print(\" Here's what you have ordered\\n\")\n",
        "        for i in lst:\n",
        "                   print(i)\n",
        "        print(\"That would cost you :\",c,\"$\")\n",
        "        w=int(input(\"Shall we confirm your order? Or you want to make any changes.\\n1 = No, i wanna make few changes\\n2 = Yes, Confirm my order\\n\"))\n",
        "        if (w==1):\n",
        "             print(\"\\n\")\n",
        "             print(\"a - insert an item\\nb - remove an item\\nc - replace an item\\nd - display\\ne - exit\")\n",
